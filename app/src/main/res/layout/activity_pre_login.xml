<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="end"
    android:background="@android:color/white"
    tools:context="bih.in.jaljeevanharyali.activity.PreLoginActivity"
    >

    <include
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        layout="@layout/header"/>

    <TextView
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Demo Version 5"
        android:layout_below="@+id/header"
        android:layout_margin="12dp"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:weightSum="2"
        android:orientation="vertical">

        <LinearLayout
            android:onClick="onDeptartmentLoginClick"
            android:layout_weight="1"
            android:padding="10dp"
            android:background="@drawable/cardshape"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_ps"
                android:layout_centerHorizontal="true"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:padding="4dp"
                android:src="@drawable/dept_login1" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical">
            <TextView
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="आधिकारिक लॉग इन"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="22dp"
                android:textStyle="bold"/>

                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="14dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="* संरचनाओं का निरीक्षण"
                    android:textColor="@color/color_red"
                    android:textSize="13sp"
                    android:padding="4dp"
                    />
                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="14dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="* नया संरचना जोड़े"
                    android:textColor="@color/color_red"
                    android:textSize="13sp"
                    android:padding="4dp"
                    />
                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="14dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="* योजनाओं का निरीक्षण"
                    android:textColor="@color/color_red"
                    android:textSize="13sp"
                    android:padding="4dp"
                  />
            </LinearLayout>
        </LinearLayout>



        <LinearLayout
            android:visibility="visible"
            android:onClick="onComplainSystemClick"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/cardshape"
            android:orientation="horizontal">

            <ImageView
                android:layout_centerHorizontal="true"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:padding="4dp"
                android:src="@drawable/complaint" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="12dp"
                    android:text="Citizen Report &amp; FeedBack"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="17dp"
                    android:textStyle="bold" />

            <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:text="नागरिक लॉगिन"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="22dp"
                android:textStyle="bold" />
                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="14dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="* योजनाओं का अवलोकन करें"
                    android:textColor="@color/color_red"
                    android:textSize="13sp"
                    android:padding="4dp"
                    />
                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="14dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="* निरीक्षित संरचनाओं का अवलोकन करें"
                    android:textColor="@color/color_red"
                    android:textSize="13sp"
                    android:padding="4dp"
                    />

                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="14dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="* उपरोक्त से संबंधित सुझाव/शिकायत दर्ज करें"
                    android:textColor="@color/color_red"
                    android:textSize="13sp"
                    android:padding="4dp"
                    />

                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="14dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="* अपने सुझाव/शिकायत की स्थिति देखें"
                    android:textColor="@color/color_red"
                    android:textSize="13sp"
                    android:padding="4dp"
                    />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_above="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_appver"
        android:textColor="@color/holo_button_normal"
        android:textAlignment="center"
        android:text="App Version 1.0"
        android:layout_marginBottom="6dp"/>

    <ImageView
        android:id="@+id/footer"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:src="@drawable/nic"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
