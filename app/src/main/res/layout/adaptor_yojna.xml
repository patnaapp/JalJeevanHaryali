<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="wrap_content">

    <!--<android.support.v7.widget.CardView-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="80dp"-->
    <!--android:layout_marginLeft="5dp"-->
    <!--android:layout_marginTop="5dp">-->

    <LinearLayout
        android:id="@+id/sblist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_margin="4dp"
        android:weightSum="2"
        android:orientation="vertical"
        android:background="#E4EBF3">

        <LinearLayout
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:text="जिला"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="@color/holo_button_normal"/>

                <TextView
                    android:padding="2dp"
                    android:id="@+id/tv_district"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="rrrrr"
                    android:textColor="#151B54" />
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="@color/holo_button_normal"
                    android:text="प्रखंड"/>

                <TextView
                    android:padding="2dp"
                    android:id="@+id/block"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="123"
                    android:textColor="#151B54" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="gone"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="13sp"
                    android:text="ग्राम"
                    android:textStyle="bold"
                    android:textColor="@color/holo_button_normal"/>

                <TextView
                    android:padding="2dp"
                    android:id="@+id/tv_village"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:textColor="#151B54" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_margin="4dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_white"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_show_location"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/mark_location"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="2dp"/>

            <LinearLayout
                android:layout_toLeftOf="@+id/iv_show_location"
                android:id="@+id/ll_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:padding="2dp"
                        android:textStyle="bold"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="निरीक्षण आईडी" />

                    <TextView
                        android:visibility="visible"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:text=":" />


                    <TextView
                        android:padding="2dp"
                        android:id="@+id/tv_inspection_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="sdgk"
                        android:textColor="#151B54" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    android:orientation="horizontal">

                    <TextView
                        android:padding="2dp"
                        android:textStyle="bold"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="यूनिक विभागीय योजना कोड" />

                    <TextView
                        android:visibility="visible"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:text=":" />


                    <TextView
                        android:padding="2dp"
                        android:id="@+id/schemecode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="sdgk"
                        android:textColor="#151B54" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    android:orientation="horizontal">

                    <TextView
                        android:padding="2dp"
                        android:textStyle="bold"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="निरीक्षण तिथि" />

                    <TextView
                        android:visibility="visible"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:text=":" />


                    <TextView
                        android:padding="2dp"
                        android:id="@+id/inspectiondate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="sdgk"
                        android:textColor="#151B54" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:orientation="horizontal">

                    <TextView
                        android:padding="2dp"
                        android:textStyle="bold"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="योजना का नाम" />

                    <TextView
                        android:visibility="visible"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:text=":" />


                    <TextView
                        android:padding="2dp"
                        android:id="@+id/tv_yojna"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="sdgk"
                        android:textColor="#151B54" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_type1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:padding="2dp"
                        android:textStyle="bold"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="अवयब का नाम" />

                    <TextView
                        android:visibility="visible"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:text=":" />


                    <TextView
                        android:padding="2dp"
                        android:id="@+id/tv_abyab"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="sdgk"
                        android:textColor="#151B54" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_type2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:padding="2dp"
                        android:textStyle="bold"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="कार्य का प्रकार" />

                    <TextView
                        android:visibility="visible"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:text=":" />


                    <TextView
                        android:padding="2dp"
                        android:id="@+id/tv_karya"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="sdgk"
                        android:textColor="#151B54" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_type4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:padding="2dp"
                        android:textStyle="bold"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="कार्य करने वाले विभाग का नाम" />

                    <TextView
                        android:visibility="visible"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:text=":" />


                    <TextView
                        android:padding="2dp"
                        android:id="@+id/tv_vivag"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="sdgk"
                        android:textColor="#151B54" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_map"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:visibility="gone"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:padding="2dp"
                            android:textStyle="bold"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:text="Latitude" />

                        <TextView
                            android:visibility="visible"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="2dp"
                            android:text=":" />


                        <TextView
                            android:padding="2dp"
                            android:id="@+id/tv_latitude"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="sdgk"
                            android:textColor="#151B54" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:padding="2dp"
                            android:textStyle="bold"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:text="Longitude" />

                        <TextView
                            android:visibility="visible"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="2dp"
                            android:text=":" />


                        <TextView
                            android:padding="2dp"
                            android:id="@+id/tv_longitude"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="sdgk"
                            android:textColor="#151B54" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>


        <LinearLayout
            android:layout_margin="4dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_white"/>

        <LinearLayout
            android:id="@+id/ll_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_inspect"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:textSize="13dp"
                android:text="सर्वेक्षण करें"/>

            <Button
                android:id="@+id/btn_map"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:textSize="13dp"
                android:text="मानचित्र में देखें"/>
        </LinearLayout>


    </LinearLayout>
</LinearLayout>